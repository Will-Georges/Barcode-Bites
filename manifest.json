{
  "manifest_version": 3,
  "name": "Barcode Bites",
  "version": "7.0.0",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "description": "Scan food barcodes and get alerted if you have any allergies, or if it does not meet your preferences.",
  "icons": {
    "64": "images/logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon-light.png"
  },
  "permissions": ["storage", "tabs", "desktopCapture"]
}
